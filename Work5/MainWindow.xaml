<Window x:Class="Work5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Work5"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="620" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="FirstPageButton" Content="Задание 1" Click="FirstPageButton_Click" Style="{StaticResource MainButton}"/>
            <Button Name="SecondPageButton" Content="Задание 2" Click="SecondPageButton_Click" Style="{StaticResource MainButton}"/>
            <Button Name="ThirdPageButton" Content="Задание 3" Click="ThirdPageButton_Click" Style="{StaticResource MainButton}"/>
        </StackPanel>
        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
