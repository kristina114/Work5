<Page x:Class="Work5.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Work5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Text="Задание 3" Style="{StaticResource MainText}"/>
        <TextBlock Grid.Row="1" Text="Введите число N" Style="{StaticResource MainText}"/>
        <TextBox Name="NumberTextBox" Grid.Column="1" Grid.Row="1" Style="{StaticResource MainTextBox}"/>
        <TextBlock Grid.Row="2" Text="Ответ:" Style="{StaticResource MainText}"/>
        <TextBox Name="AnswerTextBox" Grid.Row="2" Grid.Column="1" Style="{StaticResource AnswerTextBox}"/>
        <Button Name="OkButton" Content="OK" Grid.Row="3" Grid.ColumnSpan="2" Click="OkButton_Click" Style="{StaticResource MainButton}"/>
    </Grid>
</Page>
